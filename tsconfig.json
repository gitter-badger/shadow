{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "files": [
        "src/keyboard.ts",
        "src/mouse.ts",
        "src/shadow.ts"
    ],
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
